<h1>Edit opportunity</h1>

<%= form_for :opportunity, url: opportunity_path(@opportunity), method: :patch do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :amount %><br>
    <%= f.text_field :amount %>
  </p>

  <p>
    <%= f.label :closedate %><br>
    <%= f.date_field :closedate %>
  </p>

  <p>
    <%= f.label :stagename %><br>
    <%= f.text_field :stagename %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', opportunities_path %>